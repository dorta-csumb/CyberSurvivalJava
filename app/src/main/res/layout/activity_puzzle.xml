<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/puzzle_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
    android:padding="16dp">

    <!-- Terminal frame -->
    <LinearLayout
        android:id="@+id/terminal_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#111111">

        <!-- "Status bar" with timer and chances -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TIME 00:00"
                android:textColor="#00FF66"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/tvChances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHANCES: 4"
                android:textColor="#00FF66"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Terminal "screen" area -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#000000"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="> Booting terminal...\n> Awaiting command / selection..."
                android:textColor="#00FF66"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="2dp" />
        </ScrollView>

        <!-- "Command options" (your existing multiple choice) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A)"
                android:textAllCaps="false"
                android:fontFamily="monospace"
                android:background="#222222"
                android:textColor="#00FF66"
                android:layout_marginBottom="6dp" />

            <Button
                android:id="@+id/btnB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B)"
                android:textAllCaps="false"
                android:fontFamily="monospace"
                android:background="#222222"
                android:textColor="#00FF66"
                android:layout_marginBottom="6dp" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C)"
                android:textAllCaps="false"
                android:fontFamily="monospace"
                android:background="#222222"
                android:textColor="#00FF66"
                android:layout_marginBottom="6dp" />

            <Button
                android:id="@+id/btnD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D)"
                android:textAllCaps="false"
                android:fontFamily="monospace"
                android:background="#222222"
                android:textColor="#00FF66"
                android:layout_marginBottom="4dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
