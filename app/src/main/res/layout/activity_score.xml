<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headerTasksDone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Tasks Done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/headerSpeed"
        app:layout_constraintTop_toTopOf="@+id/headerSpeed" />

    <TextView
        android:id="@+id/headerPlayer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Player"
        app:layout_constraintEnd_toStartOf="@+id/headerAccuracy"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerAccuracy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Accuracy"
        app:layout_constraintEnd_toStartOf="@+id/headerSpeed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/headerPlayer"
        app:layout_constraintTop_toTopOf="@+id/headerPlayer" />

    <TextView
        android:id="@+id/headerSpeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Speed"
        app:layout_constraintEnd_toStartOf="@+id/headerTasksDone"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/headerAccuracy"
        app:layout_constraintTop_toTopOf="@+id/headerAccuracy" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/highScoreRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerAccuracy" />

</androidx.constraintlayout.widget.ConstraintLayout>