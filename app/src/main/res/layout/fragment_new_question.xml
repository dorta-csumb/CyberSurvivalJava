<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/questionNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Question Name (e.g., Phishing)" />

        <EditText
            android:id="@+id/questionCategoryEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category (e.g., 1)"
            android:inputType="number" />

        <EditText
            android:id="@+id/questionDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Question Description" />

        <EditText
            android:id="@+id/correctSolutionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correct Solution" />

        <EditText
            android:id="@+id/wrongSolution1EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wrong Solution 1" />

        <EditText
            android:id="@+id/wrongSolution2EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wrong Solution 2" />

        <EditText
            android:id="@+id/wrongSolution3EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wrong Solution 3" />

        <Button
            android:id="@+id/createQuestionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Create Question" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/cancel" />

    </LinearLayout>
</ScrollView>